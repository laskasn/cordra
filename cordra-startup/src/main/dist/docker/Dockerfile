FROM openjdk:8

ARG ADMIN_PASS
ARG BASE_URI
ARG PREFIX
ARG HDL_ADMIN_ID

ENV CORDRA_ADMIN_PASS ${ADMIN_PASS}
ENV CORDRA_BASE_URI ${BASE_URI}
ENV CORDRA_PREFIX ${PREFIX}
ENV CORDRA_HDL_ADMIN ${HDL_ADMIN_ID}

COPY . /opt/cordra/

EXPOSE 8080
EXPOSE 8443
EXPOSE 2641
EXPOSE 9000

ENTRYPOINT [ "/opt/cordra/docker/docker-startup" ]
